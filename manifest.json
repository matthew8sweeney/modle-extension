{
    "manifest_version": 2,

    "name": "Modle",
    "version": "0.0",
    "description": "Prevent Moodle from logging you out after 10-20 mins",
    // "default_locale": "en",

    "icons": {
        "16": "icons/modle16x16.png"
    },

    "browser_action": {
        "default_popup": "popup/popup.html"
    },

    "background": {
        "persistent": true,
        "scripts": ["background.js"]
    },
    
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
